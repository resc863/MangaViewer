<Page
    x:Class="MangaViewer.Pages.MangaReaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="using:MangaViewer.ViewModels"
    xmlns:converters="using:MangaViewer.Converters"
    mc:Ignorable="d" Background="Transparent">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>
    <Grid Background="Transparent">
        <!-- Outer grid to host left bookmark pane and right reader split -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Bookmark Pane (bring to front) -->
        <Grid Grid.Column="0" Background="Transparent" Visibility="{Binding IsBookmarkPaneOpen, Converter={StaticResource BooleanToVisibilityConverter}}" Canvas.ZIndex="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Thumb x:Name="BookmarkPaneResizeThumb"
                   Grid.Column="0"
                   Background="Transparent"
                   DragDelta="BookmarkPaneResizeThumb_DragDelta">
                <Thumb.Template>
                    <ControlTemplate TargetType="Thumb">
                        <Grid Background="Transparent">
                            <Border Width="1"
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                        </Grid>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
            <ListView x:Name="BookmarksList"
                      Grid.Column="1"
                      Background="Transparent"
                      ItemsSource="{Binding Bookmarks}"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="BookmarksList_ItemClick"
                      ContainerContentChanging="BookmarksList_ContainerContentChanging">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:MangaPageViewModel">
                        <Grid>
                            <Image Source="{Binding ThumbnailSource}" Height="120" Stretch="Uniform" Margin="5"/>
                            <Button Content="제거" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Click="RemoveBookmark_Click"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Main Reader Area (existing right-side thumbnails SplitView) -->
        <SplitView x:Name="ReaderSplitView"
                   Grid.Column="1"
                   DisplayMode="Inline"
                   OpenPaneLength="160"
                   IsPaneOpen="{Binding IsPaneOpen, Mode=TwoWay}"
                   PanePlacement="Right"
                   PaneBackground="Transparent"
                   Background="Transparent"
                   SizeChanged="ReaderSplitView_SizeChanged"
                   Canvas.ZIndex="1">
            <SplitView.Pane>
                <!-- Resizable pane: left grip thumb + content listview -->
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Drag grip -->
                    <Thumb x:Name="PaneResizeThumb"
                           Grid.Column="0"
                           Background="Transparent"
                           DragDelta="PaneResizeThumb_DragDelta"
                           DragCompleted="PaneResizeThumb_DragCompleted">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Grid Background="Transparent">
                                    <!-- visual handle line -->
                                    <Border Width="1"
                                            HorizontalAlignment="Right"
                                            Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <!-- Thumbnails list -->
                    <ListView x:Name="ThumbnailsList"
                              Grid.Column="1"
                              Background="Transparent"
                              ItemsSource="{Binding Thumbnails}"
                              SelectedIndex="{Binding SelectedThumbnailIndex, Mode=TwoWay}"
                              SelectionMode="Single"
                              ContainerContentChanging="ThumbnailsList_ContainerContentChanging">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:MangaPageViewModel">
                                <Image Source="{Binding ThumbnailSource}" Height="120" Stretch="Uniform" Margin="5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid x:Name="PageSlideHost" Background="Transparent">
                    <Grid x:Name="PageContentRoot" Background="Transparent" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TranslateTransform x:Name="PageTranslate" />
                        </Grid.RenderTransform>
                        <Grid Background="Transparent">
                            <!-- Single Page Mode -->
                            <Grid x:Name="SingleWrapper" Visibility="{Binding IsSinglePageMode, Converter={StaticResource BooleanToVisibilityConverter}}" SizeChanged="OnSingleOcrContainerSizeChanged" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image x:Name="SingleImage" Source="{Binding LeftImageSource}" Stretch="Uniform" SizeChanged="OnSingleImageSizeChanged" />
                                <Canvas x:Name="SingleOverlay" Background="Transparent" />
                            </Grid>
                            <!-- Two Page Mode -->
                            <Grid Visibility="{Binding IsTwoPageMode, Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="LeftWrapper" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" SizeChanged="OnLeftOcrContainerSizeChanged" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
                                    <Image x:Name="LeftImage" Source="{Binding LeftImageSource}" Stretch="Uniform" SizeChanged="OnLeftImageSizeChanged" />
                                    <Canvas x:Name="LeftOverlay" Background="Transparent" />
                                </Grid>
                                <Grid x:Name="RightWrapper" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" SizeChanged="OnRightOcrContainerSizeChanged" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
                                    <Image x:Name="RightImage" Source="{Binding RightImageSource}" Stretch="Uniform" SizeChanged="OnRightImageSizeChanged" />
                                    <Canvas x:Name="RightOverlay" Background="Transparent" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>