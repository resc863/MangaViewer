			"command": "dotnet",
			"type": "process",
			"args": [
				"restore",
				"MangaViewer/MangaViewer.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "build Debug x64",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"MangaViewer/MangaViewer.csproj",
				"-c",
				"Debug",
				"-f",
				"net9.0-windows10.0.26100.0",
				"-p:Platform=x64"
			],
			"problemMatcher": "$msCompile",
			"group": "build",
